<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF6E5"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/tvSiparisBaslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Sipariş Bilgileri"
        android:textColor="#FF8000"
        android:textSize="20sp"
        android:textStyle="bold" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/etAdSoyad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@color/white"
                android:hint="Ad Soyad"
                android:textColorHint="@color/black"
                android:padding="12dp"
                android:textColor="@color/black" />


            <EditText
                android:id="@+id/etAdres"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="12dp"
                android:background="@android:drawable/edit_text"
                android:gravity="top"
                android:textColorHint="@color/black"
                android:hint="Adres"
                android:padding="12dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/etTelefon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@android:drawable/edit_text"
                android:hint="Telefon"
                android:textColorHint="@color/black"
                android:inputType="phone"
                android:padding="12dp"
                android:textColor="@color/black" />


            <EditText
                android:id="@+id/etSiparisNotu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textColorHint="@color/black"
                android:background="@android:drawable/edit_text"
                android:hint="Sipariş Notu (Opsiyonel)"
                android:padding="12dp"
                android:textColor="@color/black" />


            <TextView
                android:id="@+id/tvSepetUrunlerBaslik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Seçilen Menü"
                android:textColor="#FF8000"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/siparisRv"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>
    </ScrollView>


    <TextView
        android:id="@+id/tvOdemeOzeti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="end"
        android:text="Toplam: ₺0.00"
        android:textColor="#FF8000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSiparisOde"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orangePrimary"
        android:text="Ödemeyi Tamamla" />


</LinearLayout>













