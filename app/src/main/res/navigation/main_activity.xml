<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    app:startDestination="@id/anasayfaFragment">

    <fragment
        android:id="@+id/anasayfaFragment"
        android:name="com.tahacan.yemekprojesi.ui.fragment.AnasayfaFragment"
        android:label="fragment_anasayfa"
        tools:layout="@layout/fragment_anasayfa" >
        <action
            android:id="@+id/gecisDetay"
            app:destination="@id/detayFragment" />
        <action
            android:id="@+id/gecisFavori"
            app:destination="@id/favorilerFragment" />
    </fragment>
    <fragment
        android:id="@+id/detayFragment"
        android:name="com.tahacan.yemekprojesi.ui.fragment.DetayFragment"
        android:label="fragment_detay"
        tools:layout="@layout/fragment_detay" >
        <argument
            android:name="yemek"
            app:argType="com.tahacan.yemekprojesi.data.entity.Yemekler" />
        <action
            android:id="@+id/sepetEkleGecis"
            app:destination="@id/sepetFragment" />
    </fragment>
    <fragment
        android:id="@+id/favorilerFragment"
        android:name="com.tahacan.yemekprojesi.ui.fragment.FavorilerFragment"
        android:label="fragment_favoriler"
        tools:layout="@layout/fragment_favoriler" >
        <argument
            android:name="yemek"
            app:argType="com.tahacan.yemekprojesi.data.entity.Yemekler" />
    </fragment>
    <fragment
        android:id="@+id/sepetFragment"
        android:name="com.tahacan.yemekprojesi.ui.fragment.SepetFragment"
        android:label="fragment_sepet"
        tools:layout="@layout/fragment_sepet" >
        <argument
            android:name="sepetYemekler"
            app:argType="com.tahacan.yemekprojesi.data.entity.SepetYemek" />
        <action
            android:id="@+id/siparisGecis"
            app:destination="@id/siparisFragment" />
    </fragment>
    <fragment
        android:id="@+id/siparisFragment"
        android:name="com.tahacan.yemekprojesi.ui.fragment.SiparisFragment"
        android:label="fragment_siparis"
        tools:layout="@layout/fragment_siparis" >
        <argument
            android:name="siparisYemekler"
            app:argType="com.tahacan.yemekprojesi.data.entity.SepetYemek" />
    </fragment>
</navigation>